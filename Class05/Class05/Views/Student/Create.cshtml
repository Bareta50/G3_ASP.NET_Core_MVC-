@model CreateStudentViewModel
@{
    ViewData["Title"] = "Create Student";
}

<div class="container m-5">
    <h2 class="mb-4 text-warning">Create Student(Using Tag Helpers)</h2>

    <form method="post">
        <div class="mb-3">
            <lable class="form-label">FirstName</lable>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="mb-3">
            <lable class="form-label">LastName</lable>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="mb-3">
            <lable class="form-label">DateOfBirth</lable>
            <input asp-for="DateOfBirth" class="form-control" type="date" />
        </div>

        <div>
            <label class="form-label">Active Course</label>
            <select asp-for="ActiveCourseId" class="form-select"
                     asp-item="@(new SelectList(Model.Courses, "Id", "Name"))">
                <option value="">--- Select Course ---</option>
            </select>
        </div>

        <div class="mb-5">
            <button type="submit" class="btn btn-outline-warning">Add Student</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to Student</a>
        </div>
    </form>
</div>