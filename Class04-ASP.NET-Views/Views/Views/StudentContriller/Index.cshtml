@model IEnumerable<Views.Models.DTOModels.StudentWithCoursDTO>

    <h1>
        Index
    </h1>

    <table class="table">
    <thead>
        <tr>
           <th>
               Name
           </th>
            <th>
                Age
            </th>
            <th>
                Name of Course
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.FullName
                </td>
                <td>
                    @item.Age
                </td>
                <td>
                    @item.CourseName
                </td>
                <td>
                    @Html.ActionLink("Details","GetStudentById", new {id = item.Id})
                </td>
            </tr>
        }
</table>